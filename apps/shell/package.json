{
    "name": "@cohbrgr/shell",
    "version": "1.0.0",
    "author": "Christian Oberhamberger",
    "license": "ISC",
    "workspaces": [
      "src/*"
    ],
    "scripts": {
        "cleanup": "rimraf ./dist",
        "bootstrap": "npm run cleanup && rimraf ./node_modules && npm install",
        "lint": "eslint src",
        "prestart": "npm run cleanup && npm run lint && npm run prettier",
        "prebuild": "npm run cleanup",
        "prettier": "node_modules/.bin/prettier --write .",
        "build": "NODE_ENV=production node ./../../packages/build/bin",
        "build:ssg": "NODE_ENV=production node ../../packages/build/bin --generator",
        "build:analyze": "NODE_ENV=production node ../../packages/build/bin --analyze",
        "start": "NODE_ENV=development node ../../packages/build/bin build -w",
        "test": "jest"
    }
}

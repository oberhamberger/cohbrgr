{
    "extends": "@cohbrgr/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "rewriteRelativeImportExtensions": true,
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "@cohbrgr/content/*": ["../content/*"]
        },
        "typeRoots": [
            "../../node_modules/@types",
            "./node_modules/@types",
            "./src/client/@types/*",
            "./src/server/@types/*"
        ],
        "lib": ["dom", "dom.iterable", "webworker"]
    },
    "exclude": ["../../node_modules", "node_modules"]
}

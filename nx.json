{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "start": {
            "cache": true,
            "dependsOn": ["^build", "prestart"],
            "outputs": ["{projectRoot}/dist"]
        },
        "build": {
            "cache": true,
            "dependsOn": ["^build", "prebuild"],
            "outputs": ["{projectRoot}/dist"]
        },
        "postbuild": {
            "dependsOn": ["^postbuild"]
        },
        "prebuild": {
            "dependsOn": ["^prebuild"]
        },
        "test": {
            "outputs": ["{projectRoot}/coverage"]
        }
    }
}

{
    "name": "cohbrgr",
    "version": "1.0.1",
    "main": "apps/shell/dist/server",
    "author": "Christian Oberhamberger",
    "description": "temporary website gone mad",
    "private": true,
    "license": "ISC",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "keywords": [
        "express",
        "typescript",
        "react",
        "css-modules",
        "ssr"
    ],
    "scripts": {
        "cleanup": "rimraf ./dist",
        "bootstrap": "npm run cleanup && rimraf ./node_modules && npm install",
        "lint": "eslint .eslintrc.js packages",
        "prestart": "npm run cleanup && npm run lint && npm run prettier",
        "prebuild": "npm run cleanup",
        "prettier": "node_modules/.bin/prettier --write .",
        "build": "NODE_ENV=production ts-node -r tsconfig-paths/register build",
        "prebuild:ssg": "npm run cleanup",
        "build:ssg": "NODE_ENV=production ts-node -r tsconfig-paths/register build --generator",
        "build:analyze": "NODE_ENV=production ts-node -r tsconfig-paths/register build --analyze",
        "start": "NODE_ENV=development ts-node -r tsconfig-paths/register build -w",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oberhamberger/cohbrgr.git"
    },
    "bugs": {
        "url": "https://github.com/oberhamberger/cohbrgr/issues"
    },
    "homepage": "https://github.com/oberhamberger/cohbrgr#readme",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router": "^6.20.1",
        "react-router-dom": "^6.20.1",
        "winston": "^3.11.0",
        "compression": "^1.7.4",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "html-validate": "^8.7.4",
        "nocache": "^4.0.0",
        "node-mocks-http": "^1.13.0"
    },
    "devDependencies": {
        "@tsconfig/node20": "^20.1.2",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@types/react-router": "^5.1.20",
        "@types/react-router-dom": "^5.3.3",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.55.0",
        "eslint-plugin-jsdoc": "^46.9.0",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-webpack-plugin": "^4.0.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-transform-stub": "^2.0.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "@types/compression": "^1.7.5",
        "@types/express": "^4.17.21",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2"
    }
}

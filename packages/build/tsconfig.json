{
    "extends": "@tsconfig/node21/tsconfig.json",
    "ts-node": {},
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",

        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"]
        },

        "outDir": "lib",
        "sourceMap": true,
        "incremental": true,
        "allowJs": false,
        "resolveJsonModule": true,

        "typeRoots": ["../../node_modules/@types", "./@types/*"]
    },
    "exclude": ["./dist", "./bin"]
}

{
    "source": ["tokens/**/*.json"],
    "platforms": {
      "scss": {
        "transformGroup": "scss",
        "buildPath": "dist/",
        "files": [{
          "destination": "scss/_variables.scss",
          "format": "scss/variables"
        }]
      },
      "css": {
        "transformGroup": "css",
        "buildPath": "dist/",
        "files": [{
          "destination": "css/_variables.css",
          "format": "css/variables"
        }]
      }
    }
  }

{
    "extends": "@cohbrgr/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "src/*": ["./src/*"]
        },
        "outDir": "dist",
        "declaration": true,
        "types": ["node", "jest"]
    },
    "include": ["./", "src/**/*"],
    "exclude": [
        "**/dist",
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}

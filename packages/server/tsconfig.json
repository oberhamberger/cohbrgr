{
    "extends": "@cohbrgr/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "src/*": ["./*"]
        },
        "outDir": "dist"
    },
    "include": ["./", "src/**/*"],
    "exclude": [
        "dist",
        "node_modules",
        "jest.config.ts",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/__tests_/**"
    ]
}

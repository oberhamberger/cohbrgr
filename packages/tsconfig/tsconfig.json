{
    "@schema": "https://json.schemastore.org/tsconfig",
    "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node24/tsconfig"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "sourceMap": true,
        "incremental": false,
        "declaration": true,
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "types": ["node", "jest"],
        "typeRoots": [
            "../../node_modules/@types",
            "../../@types",
            "node_modules/@types",
            "@types"
        ]
    }
}

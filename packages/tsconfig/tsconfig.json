{
    "extends": [
        "@tsconfig/strictest/tsconfig",
        "@tsconfig/node22/tsconfig"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "sourceMap": true,
        "incremental": true,
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "typeRoots": [
            "**/node_modules/@types",
            "**/@types",
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**",
        "**/jest.config.ts",
        "**/dist"
    ]
}
{
    "extends": "@tsconfig/node21/tsconfig.json",
    "ts-node": {},
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "build/*": ["packages/*"]
        },
        "sourceMap": true,
        "incremental": true,
        "jsx": "react-jsx",
        "allowJs": false,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "packages/@types/*",
            "packages/build/src/@types/*"
        ],
        "lib": ["ES2022", "dom", "dom.iterable", "webworker"]
    },
    "exclude": ["./dist"]
}

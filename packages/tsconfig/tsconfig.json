{
    "extends": [
        "@tsconfig/strictest/tsconfig",
        "@tsconfig/node22/tsconfig"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "sourceMap": true,
        "incremental": true,
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "../../node_modules/@types",
            "./client/src/@types/*",
            "./server/src/@types/*"
        ]
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/*.ts",
        "**/__tests__/*.tsx",
        "**/jest.config.ts",
        "dist"
    ]
}
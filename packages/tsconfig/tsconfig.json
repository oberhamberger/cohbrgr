{
    "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node22/tsconfig"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "sourceMap": true,
        "incremental": true,
        "allowJs": false,
        "checkJs": false,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"]
        
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/*.ts",
        "**/__tests__/*.tsx",
        "**/jest.config.ts"
    ]
}

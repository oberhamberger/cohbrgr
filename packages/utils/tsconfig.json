{
    "extends": "@cohbrgr/tsconfig",
    "ts-node": {},
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"]
        },

        "outDir": "bin",
        "sourceMap": true,
        "incremental": true,
        "allowJs": false,
        "declaration": true,
        "resolveJsonModule": true,

        "typeRoots": ["../../node_modules/@types", "./@types/*"]
    },
    "exclude": ["./dist", "./bin"],
    "include": ["src"]
}

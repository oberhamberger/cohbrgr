{
    "compilerOptions": {
        "module": "es6",
        "esModuleInterop": true,
        "target": "es6",
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "server": [
              "./src/server"
            ]
          },
    },
    "exclude": [
        "./dist"
    ]
}

{
    "extends": "./node_modules/@tsconfig/node20/tsconfig.json",
    "ts-node": {},
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "build/*": ["packages/build/*"],
            "src/*": [
                "packages/client/*",
                "packages/server/*",
                "packages/service-worker/*"
            ]
        },
        "sourceMap": true,
        "incremental": true,
        "jsx": "react-jsx",
        "allowJs": false,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./packages/build/@types/*",
            "./packages/client/@types/*",
            "./packages/server/@types/*"
        ],
        "lib": ["ES2022", "dom", "dom.iterable", "webworker"]
    },
    "exclude": ["./dist"]
}

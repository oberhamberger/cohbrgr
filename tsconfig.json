{
   "extends": "@tsconfig/node18/tsconfig.json",
   "compilerOptions": {
      "baseUrl": ".",
      "paths": {
         "src/*": [ "src/*" ]
      },
      "sourceMap": true,
      "jsx": "react",
      "allowJs": false,
      "resolveJsonModule": true,
      "typeRoots": [
         "./node_modules/@types", "./build/@types/*", "./src/@types/*"
      ],
      "lib": [
         "ES2022",
         "dom",
         "dom.iterable",
         "webworker"
      ]
   },
   "exclude": [
      "./dist"
   ]
}

{
   "extends": "@tsconfig/node16/tsconfig.json",
   "compilerOptions": {
      "paths": {
         "src/*": [
            "src/*"
         ]
      },
      "baseUrl": ".",
      "sourceMap": true,
      "noImplicitAny": false,
      "jsx": "react",
      "allowJs": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "typeRoots": [
         "./node_modules/@types"
      ],
      "lib": [
         "es2017",
         "dom",
         "dom.iterable",
         "webworker"
      ]
   },
   "exclude": [
      "./dist"
   ]
}

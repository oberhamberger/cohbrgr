{
    "extends": "./node_modules/@tsconfig/node20/tsconfig.json",
    "ts-node": {},
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "build/*": ["build/*"],
            "src/*": ["src/*"]
        },
        "sourceMap": true,
        "incremental": true,
        "jsx": "react-jsx",
        "allowJs": false,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "typeRoots": [
            "./node_modules/@types",
            "./build/@types/*",
            "./src/@types/*"
        ],
        "lib": ["ES2022", "dom", "dom.iterable", "webworker"]
    },
    "exclude": ["./dist"]
}
